{
	admin off
}

:2015 {	
	log {
		level {$LOG_LEVEL}
	}

	root * /site 

	header / {
		# Enable HTTP Strict Transport Security (HSTS) to force clients to always connect via HTTPS (do not use if only testing)
		Strict-Transport-Security "max-age=31536000; includeSubDomains"
		# Enable cross-site filter (XSS) and tell browser to block detected attacks
		X-XSS-Protection "1; mode=block"
		# Prevent some browsers from MIME-sniffing a response away from the declared Content-Type
		X-Content-Type-Options "nosniff"
		# Disallow the site to be rendered within a frame (clickjacking protection)
		X-Frame-Options "DENY"
		# Set CSP to support Angular
		Content-Security-Policy "default-src 'self' 'unsafe-eval' https://fonts.gstatic.com https://*.pathfinder.gov.bc.ca http://localhost:5200; style-src 'self' 'unsafe-inline' https://use.fontawesome.com; script-src 'self' 'unsafe-inline' 'unsafe-eval';"
		# Set referrer policy
		Referrer-Policy "same-origin"
		# Allow general API access (TODO: configure for dev only)
		Access-Control-Allow-Origin *
	}

	encode zstd gzip

	route {
		reverse_proxy /api* {$API_URL}
		reverse_proxy /signin-oidc* {$API_URL}
		reverse_proxy /login* {$API_URL}
		reverse_proxy /token* {$API_URL}
		try_files {path} {path}/ /index.html?{query}
	}
	
	file_server
}
